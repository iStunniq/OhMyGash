<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="@color/primaryColor2">

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="3000dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline26"
        app:srcCompat="@drawable/gasimage2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Login">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView38"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="-16dp"
                app:layout_constraintBottom_toBottomOf="@+id/PlaceProfileText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/blue" />

            <ImageView
                android:id="@+id/imageView39"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="-16dp"
                app:layout_constraintBottom_toBottomOf="@+id/PlaceProfileMenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView38"
                app:srcCompat="@drawable/white" />

            <TextView
                android:id="@+id/PlaceOldPasswordText"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:text="Confirm Password:"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/placeBrand"
                app:layout_constraintTop_toBottomOf="@+id/placeBrand" />

            <Button
                android:id="@+id/PlaceProfileSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/blue"
                android:text="Save"
                android:textColor="@color/white"
                app:icon="@drawable/checkmark"
                app:iconSize="25dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline19"
                app:layout_constraintStart_toStartOf="@+id/imageView39"
                app:layout_constraintTop_toBottomOf="@+id/PlaceOldPassword" />

            <Button
                android:id="@+id/PlaceProfileUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/blue"
                android:text="Upload"
                android:textColor="@color/white"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconPadding="0dp"
                app:iconSize="25dp"
                app:layout_constraintBottom_toBottomOf="@+id/PlaceProfilePhoto"
                app:layout_constraintEnd_toStartOf="@+id/PlaceProfilePhoto"
                app:layout_constraintStart_toStartOf="@+id/imageView39"
                app:layout_constraintTop_toTopOf="@+id/PlaceProfilePhoto" />

            <Button
                android:id="@+id/PlaceProfileMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/blue"
                android:text="Return"
                android:textColor="@color/white"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconSize="25dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView39"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="@+id/guideline19"
                app:layout_constraintTop_toTopOf="@+id/PlaceProfileSave" />

            <TextView
                android:id="@+id/PlaceProfileText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                android:text="My Autoshop"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView38"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/imageView38"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/PlaceProfileNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Place Name:"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/imageView39"
                app:layout_constraintTop_toBottomOf="@+id/imageView38" />

            <TextView
                android:id="@+id/PlaceProfileAddressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Place Address"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/PlaceProfileNameText"
                app:layout_constraintTop_toBottomOf="@+id/ProfilePlaceName" />

            <TextView
                android:id="@+id/placeProfileAddressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Thumbnail"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/PlaceProfileNameText"
                app:layout_constraintTop_toTopOf="@+id/PlaceProfilePhoto" />

            <TextView
                android:id="@+id/placeBrand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Brand:"
                android:textAlignment="viewEnd"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="@+id/PlaceProfileAddressText"
                app:layout_constraintTop_toBottomOf="@+id/PlaceProfilePhoto" />

            <EditText
                android:id="@+id/ProfilePlaceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:autofillHints=""
                android:background="@drawable/white"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="40dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/imageView39"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView39"
                app:layout_constraintTop_toBottomOf="@+id/PlaceProfileNameText" />

            <EditText
                android:id="@+id/PlaceOldPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/white"
                android:ems="10"
                android:inputType="textPassword"
                android:minHeight="40dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:verticalScrollbarPosition="right"
                app:layout_constraintEnd_toEndOf="@+id/ProfilePlaceAddress"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ProfilePlaceAddress"
                app:layout_constraintTop_toBottomOf="@+id/PlaceOldPasswordText" />

            <EditText
                android:id="@+id/ProfilePlaceAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/white"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:minHeight="40dp"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/ProfilePlaceName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ProfilePlaceName"
                app:layout_constraintTop_toBottomOf="@+id/PlaceProfileAddressText" />

            <ImageView
                android:id="@+id/PlaceProfilePhoto"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView39"
                app:layout_constraintTop_toBottomOf="@+id/ProfilePlaceAddress"
                app:srcCompat="@android:drawable/screen_background_dark_transparent" />

            <Spinner
                android:id="@+id/BrandForProfile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white"
                android:paddingStart="10dp"
                android:paddingLeft="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/placeBrand"
                app:layout_constraintEnd_toEndOf="@+id/imageView39"
                app:layout_constraintStart_toEndOf="@+id/placeBrand"
                app:layout_constraintTop_toTopOf="@+id/placeBrand" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>